{
    "compilerOptions": {
        "target": "ESNext",
        "moduleResolution": "node",
        "types": ["node", "chrome"],
        "allowJs": false,
        "jsx": "react-jsx",
        "jsxImportSource": "react",
        "allowSyntheticDefaultImports": true,
        "removeComments": false,
        "strict": true,
        "noUnusedLocals": true,
        "resolveJsonModule": true,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
