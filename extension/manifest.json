{
    "name": "X Smart Search",
    "manifest_version": 3,
    "version": "1.0.0",
    "description": "Use plain English to apply advanced search filters on X",
    "options_page": "assets/settings.html",
    "action": {},
    "permissions": [
      "storage",
      "scripting"
    ],
    "host_permissions": [
      "https://twitter.com/",
      "https://x.com/",
      "https://pro.x.com/",
      "https://pro.twitter.com/"
    ],
    "externally_connectable": {
      "matches": ["https://twitter.com/*", "https://x.com/*", "https://pro.twitter.com/*", "https://pro.x.com/*"]
    },
    "icons": {
        "16": "assets/icons/16.png",
        "32": "assets/icons/32.png",
        "48": "assets/icons/48.png",
        "128": "assets/icons/128.png"
    },
    "background": {
      "service_worker": "lib/background.js"
    },
    "web_accessible_resources": [
      {
          "resources": ["assets/icons/search_icon_white.svg", "assets/icons/search_icon_black.svg"],
          "matches": ["https://twitter.com/*", "https://x.com/*", "https://pro.twitter.com/*", "https://pro.x.com/*"]
      }
    ]
  }